<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane styleClass="container" stylesheets="/css/main.css" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HomepageController">

    <GridPane styleClass="grid-pane">
        <Button text="Logout"
                onAction="#handleLogout"
                GridPane.rowIndex="0"
                GridPane.columnIndex="0"/>

        <Label fx:id="title"
               GridPane.rowIndex="3"
               GridPane.columnIndex="3"
               text="${controller.firstName}"/>
    </GridPane>

</GridPane>
