<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="container" stylesheets="/css/main.css"
      xmlns="http://javafx.com/javafx/8" fx:controller="controller.LoginController">
    <Label fx:id="title" text="MMORPG"/>
    <VBox>
        <GridPane styleClass="grid-pane">

            <Label text="Username: "
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"/>

            <TextField fx:id="usernameField"
                       promptText="Enter username"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="1"/>

            <Label text="Password: "
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0"/>

            <PasswordField fx:id="passwordField"
                           promptText="Enter password"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>

            <Button text="Sign In"
                    onAction="#handleSignIn"
                    GridPane.rowIndex="2"
                    GridPane.columnSpan="2"
                    GridPane.halignment="RIGHT"/>

        </GridPane>
        <TextFlow textAlignment="CENTER">
            <Label text="Don't have an account?"/>
            <Hyperlink text="Click here"
                       onAction="#handleRegisterScreen"/>
            <Label text="to register!"/>
        </TextFlow>
    </VBox>
</VBox>
